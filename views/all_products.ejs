<%- include('_layouts/header'); %>
<div class="row products">
    
    <% products.forEach(product => { %>
    <div class="col-xs-12 col-md-4 p">
        <a href="/products/<%= product.category %>/<%= product.slug %>" class="pa">
            <img src="/product_images/<%= product._id %>/<%= product.img %>" alt="" class="pimage">
        </a>
        <h3><%= product.title %></h3>
        <h4>$ <%= parseFloat(product.price).toFixed(2) %></h4>
        <a href="/products/<%= product.category %>/<%= product.slug %>" class="vd">View Details</a>

    </div>



    <% }) %>
</div>
<%- include('_layouts/footer'); %>
