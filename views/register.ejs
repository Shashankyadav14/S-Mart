<%- include('_layouts/header'); %>
<%- messages('messages', locals) %>
<% if( typeof(errors) !="undefined"){%>
<% if(errors){ %>
<% errors.forEach(eror =>{ %>
  <div class="alert alert-warning" role="alert"><%= eror.msg %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      </button>
   </div>
  
  <%})}%>

  <%}%>
<h1><%= title %></h1>

<form method="post" action="/users/register">

    <div class="form-group">
        <label style="float: left;">Name</label>
        <input type="text" name="name" class="form-control" placeholder="Name">
    </div>

    <div class="form-group">
        <label style="float: left;">Email</label>
        <input type="text" name="email" class="form-control" placeholder="Ex: abc@gmail.com">
    </div>
    
    <div class="form-group">
        <label style="float: left;">Username</label>
        <input type="text" name="username" class="form-control" placeholder="Username">
    </div>

    <div class="form-group">
        <label style="float: left;">Password</label>
        <input type="password" name="password" class="form-control"  placeholder="Password">
    </div>
    
    <div class="form-group">
        <label style="float: left;">Password Again</label>
        <input type="password" name="password2" class="form-control"  placeholder="Password Again">
    </div>

    <button type="submit" class="btn btn-default">Register</button>
</form>

<%- include('_layouts/footer'); %>
