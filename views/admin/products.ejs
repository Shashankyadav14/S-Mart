<%- include('../_layouts/adminheader')%>
<h2 class="page-title">Products</h2>
<a href="/admin/products/add-product" class="btn-btn-primary">Add a new product</a>
<br><br>

<% if (count > 0) { %>
<table class="table table-striped">

    <thead class="home">
        <tr>
            <th>Product</th>
            <th>price</th>
            <th>Category</th>
            <th>Product Image</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product){ %>
            <tr>
                <td><%= product.title%></td>
                <td>$<%= parseFloat(product.price).toFixed(2)%></td>
                <td><%= product.category%></td>
                <td>
                    <%  if (product.img == "") { %>
                        <img src="/images/noimage.png" style="width: 60px;" alt="">
                        <% } else {%>
                        <img src="/product_images/<%= product._id %>/<%= product.img %>" style="width: 60px;" alt="">
                            <% } %>
                </td>
                <td><a href="/admin/products/edit-product/<%= product._id %>">Edit</a></td>
                <td><a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %>">Delete</a></td>
                <%}) %>
            </tr>
    </tbody>
</table>
<% } else {%>   
<h3 class="text-center">Ther are no Product</h3>
<% }%>
<%- include('../_layouts/adminfooter')%>





